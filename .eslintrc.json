{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    // 三等号
    "eqeqeq": "error",
    // 单引号
    "quotes": ["error", "single"],
    // 驼峰命名
    "camelcase": "error",
    // 文件末换行
    "eol-last": "error",
    // 缩进 2个 空格
    "indent": ["error", 2],
    // 禁用分号
    "semi": ["error", "never"]
  }
}
